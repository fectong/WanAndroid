<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
        <item name="android:listViewStyle">@style/listViewPrefs</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:editTextColor">@color/colorTextPrimaryDark</item>
        <item name="android:textColorHint">@color/colorTextPrimaryDark</item>
        <!--<item name="android:background">@color/colorPrimaryLight</item>-->
        <item name="android:background">@color/colorToolbarBG</item>
        <item name="android:navigationBarColor">@color/colorTextPrimaryDark</item>
    </style>

    <style name="listViewPrefs" parent="@android:style/Widget.Material.Light.ListView">
        <item name="android:background">@drawable/item_bg</item>
        <item name="android:cacheColorHint">@color/colorTextPrimaryDark</item>
    </style>

</resources>
