<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/colorCardItem"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="@drawable/item_bg">

        <TextView
            android:id="@+id/tvCollectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="clip_vertical"
            android:text="@string/holder"
            android:textColor="@color/colorTextPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCollectionAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tvCollectionTitle"
            android:gravity="clip_vertical"
            android:paddingTop="2dp"
            android:text="@string/holder"
            android:textColor="@color/colorTextGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCollectionChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvCollectionTitle"
            android:layout_alignParentEnd="true"
            android:paddingTop="2dp"
            android:gravity="clip_vertical"
            android:text="@string/holder"
            android:textColor="@color/colorTextAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvCollectionTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tvCollectionChapter"
            android:gravity="clip_vertical"
            android:paddingTop="2dp"
            android:text="@string/holder"
            android:textColor="@color/colorTextGray"
            android:textSize="12sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>